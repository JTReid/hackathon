{
  "name": "base-project",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"bundle exec rails s\" \"bin/webpack-dev-server --hot --quiet\" --names 'Rails,Webpack' --prefix name",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch --coverage",
    "lint": "yarn eslint --ext .js . --config '.eslintrc' --fix"
  },
  "dependencies": {
    "@babel/preset-react": "^7.9.4",
    "@rails/webpacker": "^4.0.7",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.8",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "concurrently": "^3.6.1",
    "eslint-config-cratebind": "^2.0.8",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react_ujs": "^2.6.1"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.3.1",
    "babel-jest": "^24.8.0",
    "eslint": "^6.1.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "react-refresh": "^0.8.2",
    "react-test-renderer": "^16.8.6",
    "webpack-dev-server": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "{app,test}/**/*.rb": [
      "bundle exec rubocop -a",
      "git add"
    ]
  }
}